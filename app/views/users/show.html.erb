<div class="content">
<div class="container-fluid">
        <div class="row">
            <div class="card card-profile">
                    <div class="card-avatar">
                        <a href="#pablo">
                            <img class="img" />
                        </a>
                    </div>
                    <div class="card-body">
                        <h6 class="card-category text-gray">CurriculumXD</h6>
                        <h4 class="card-title"><%= current_user.email %></h4>
                    </div>
                </div>
        </div>

<div class="col-md-12">
    <div class="card card-plain">
        <div class="card-header card-header-primary">
            <h4 class="card-title mt-0"> Usuários do sistema</h4>
            <p class="card-category">Tabela com todos os seus Currículo</p>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="">
                        <th>
                            Email
                        </th>

                          <th colspan="3">Ações</th>

                    </thead>
                        <tbody>
                          <% current_user.creators.each do |creator| %>
                            <tr>
                              <td><%= creator.email %></td>
                              <td><%= link_to 'Ver', creator,class:"btn btn-link" %></td>
                              <td><%= link_to 'Editar', edit_creator_path(creator),class:"btn btn-link" %></td>
                              <td><%= link_to 'Deletar', creator,class:"btn btn-link", method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
                            </tr>
                          <% end %>
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

    </div>
</div>