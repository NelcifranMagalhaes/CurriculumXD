<!DOCTYPE html>
<html>
  <head>
    <title>CurriculumXD</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport"/>
    <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>

  </head>

  <body>
     <div class="wrapper">
        <% if current_user.present? %> 
        <div class="sidebar" data-color="purple" data-background-color="white">
        <div class="logo">
            <%= link_to root_path, title: "dashboard" do %>
                <h4 class="simple-text logo-normal" >CurriculumXD</h4>
              <% end %>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">

                    <li class="nav-item active ">
                        <a class="nav-link" >
                            <i class="material-icons">dashboard</i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <%= link_to current_user,class: "nav-link" do %>
                            <i class="material-icons">person</i>
                            <%= current_user.email %>
                        <% end %>
                    </li>
                    <% if  current_user.has_role? :admin%>
                        <li class="nav-item ">
                            <%= link_to creators_path,class: "nav-link" do %>
                                <i class="material-icons">content_paste</i>
                                Lista de Curriculos
                            <% end %>
                        </li>
                        <li class="nav-item ">
                            <%= link_to users_path,class: "nav-link" do %>
                                <i class="material-icons">group</i>
                                Lista de Usu√°rios
                            <% end %>
                        </li>
                    <% end %>

                    <li class="nav-item dropdown">
                        <a class="nav-link" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">close</i>
                            <p>Sair</p>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                          
                            <%= link_to('Sair'.html_safe,  destroy_user_session_path , method: 'delete',class: 'dropdown-item')%>

                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <% end %>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-transparent  navbar-absolute fixed-top">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <%= link_to root_path,class: "navbar-brand" do %>
                            CurriculumXD
                        <% end %>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="navbar-toggler-icon icon-bar"></span>
                      <span class="navbar-toggler-icon icon-bar"></span>
                      <span class="navbar-toggler-icon icon-bar"></span>
                    </button>

                  </div>
            </nav>

            <div class="content">
              <div class="container-fluid">
                  <%= yield %>
              </div>    
            </div>
            
          <footer class="footer ">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <%= link_to("Github", "https://github.com/NelcifranMagalhaes") %>
                            </li>

                            <li>
                                <%= link_to("Linkedin", "https://www.linkedin.com/in/nelcifranpires/") %>
                            </li>
                        </ul>
                    </nav>
                    <div class="copyright ">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>, made for
                        <%= link_to("Nelcifran", "https://www.linkedin.com/in/nelcifranpires/") %>
                    </div>
                </div>
            </footer>
        </div>
    </div>
  </body>
</html>
