<div class="row nested-fields">

              <div class="col-md-4 mb-3">
                <label class="bmd-label-floating">Nome</label>
                  <%= f.input :name ,class: "form-control",label: false%>
              </div>              

              <div class="col-md-4 mb-3">
                <label class="bmd-label-floating">Data Inicial</label>
                <%= f.input :begin_date,as: :date,class: "form-control",html5: true,label: false %>
              </div>

              <div class="col-md-4 mb-3">
                <label class="bmd-label-floating">Data Final</label>
                <%= f.input :end_date ,as: :date,class: "form-control" ,html5: true,label: false%>
              </div> 

              <div class="col-md-8 mb-3">
                <label class="bmd-label-floating">Descrição</label>
                  <%= f.input :note ,class: "form-control",label: false%>
              </div>  

              <div class="col-md-3 mb-3">
                <%= link_to_remove_association "remover Educação", f,class: "btn btn-danger"%>         
              </div>  
</div>