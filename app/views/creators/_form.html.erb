<%= simple_form_for @creator ,class: "needs-validation" do |form| %>

  <div class="row">

              <div class="col-md-6 mb-3">
                <%= form.input :name ,class: "form-control"%>
                <div class="invalid-feedback">
                  Valid first name is required.
                </div>
              </div>              

              <div class="col-md-6 mb-3">
                <%= form.input :birthday,class: "form-control" %>

                <div class="invalid-feedback">
                  Valid first name is required.
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.input :description ,class: "form-control"%>
                <div class="invalid-feedback">
                  Valid first name is required.
                </div>
              </div>              

              <div class="col-md-6 mb-3">
                <%= form.input :cpf ,class: "form-control"%>
                <div class="invalid-feedback">
                  Valid first name is required.
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.input :email ,class: "form-control"%>
                <div class="invalid-feedback">
                  Valid first name is required.
                </div>
              </div>

            <hr class="mb-4">
            <%= form.button :submit ,class: "btn btn-primary btn-lg btn-block" %>
</div>
<% end %>
