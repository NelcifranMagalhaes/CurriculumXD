<div class="row nested-fields">

              <div class="col-md-6 mb-3">
                <%= f.input :name ,label: false,placeholder: 'Nome',class: "form-control"%>
              </div>              

              <div class="col-md-6 mb-3">
                <%= f.input :begin_date,as: :date,html5: true,class: "form-control" %>
              </div>

              <div class="col-md-6 mb-3">
                <%= f.input :end_date,as: :date ,html5: true,class: "form-control"%>
              </div> 

              <div class="col-md-6 mb-3">
                <%= f.input :address ,label: false,placeholder: 'Endereço',class: "form-control"%>
              </div>

              <div class="col-md-6 mb-3">
                <%= f.input :note ,label: false,placeholder: 'Desccrição',class: "form-control"%>
              </div>     

              <div class="col-md-3 mb-3">

            <%= link_to_remove_association "remover Experiência", f ,class: "btn btn-danger"%>
            </div>         
</div>