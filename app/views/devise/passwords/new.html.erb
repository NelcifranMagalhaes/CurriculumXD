<h2>Esqueceu sua senha?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "needs-validation", method: :post }) do |f| %>
  <%= f.error_notification %>
  <div class="row">

	  <div class="col-md-6 mb-3">
	    <label class="bmd-label-floating">Email</label>
	    <%= f.input :email,label: false,class: "form-control",required: true, autofocus: true %>
	  </div> 

  </div>

  <div class="row">
    <%= f.button :submit ,"Send me reset password instructions" ,class: "btn btn-primary btn-lg"%>
  </div>

<% end %>

<%= render "devise/shared/links" %>
