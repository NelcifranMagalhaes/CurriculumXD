<h2>Entrar </h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">

  	<div class="col-md-6 mb-3">
  	  <label class="bmd-label-floating">Email</label>
    	<%= f.input :email, required: false, autofocus: true,label: false ,class: "form-control" %>
  	</div>
  	<div class="col-md-6 mb-3">
  	  <label class="bmd-label-floating">Senha</label>
    	<%= f.input :password, required: false ,label: false ,class: "form-control"%>
  	</div>
  
  </div>

  <div class="row">
    <%= f.button :submit, "Entrar",class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
<div class="row">
	<%= render "devise/shared/links" %>
</div>